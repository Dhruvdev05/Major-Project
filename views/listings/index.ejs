<div id="filters">
  <div class="filters">
   <div><i class="fa-solid fa-fire"></i></div> 
     <p>Trending</p>
  </div>

  <div class="filters">
   <div><i class="fa-solid fa-bed"></i></div> 
     <p>Rooms</p>
  </div>
  
   <div class="filters">
   <div><i class="fa-solid fa-mountain-sun"></i></i></div> 
     <p>Mountains</p>
  </div>

   <div class="filters">
   <div><i class="fa-solid fa-mountain-city"></i></div> 
     <p>Iconic Cities</p>
  </div>

   <div class="filters">
   <div><i class="fa-brands fa-fort-awesome"></i></div> 
     <p>Castles </p>
  </div>

      <div class="filters">
   <div><i class="fa-solid fa-snowflake"></i></div> 
     <p>Arctic</p>
  </div>

      <div class="filters">
   <div><i class="fa-solid fa-landmark"></i></div> 
     <p>Historic</p>
  </div>

      <div class="filters">
   <div><i class="fa-solid fa-cow"></i></div> 
     <p>Farms</p>
  </div>

      <div class="filters">
   <div><i class="fa-solid fa-binoculars"></i></div> 
     <p>Sight-Seeing</p>
  </div>
  


  <div class="tax-toggle">
 <div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
</div>
  </div>
 
</div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of allListing) { %>
      <a href="/listings/<%= listing._id  %>" class="listing-link">
      <div class="card listing-grid-card col;" >
        <img src="<%= listing.image.url %>" class="card-img-top" style="height: 18rem; alt="<%= listing.title %>">
 
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %>/night
          <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
          </p>
        </div>
      </div>
</a>

    <% } %>
  </div>


<script>
  let taxSwicth = document.getElementById("switchCheckDefault");
  taxSwicth.addEventListener("click", () => {
let taxInfo = document.getElementsByClassName("tax-info");
for (info of taxInfo) {
  if(info.style.display != "inline"){
    info.style.display = "inline";
  }else{
    info.style.display = "none"
  }
}
  })
</script>



